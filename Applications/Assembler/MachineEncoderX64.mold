  method xchg_r_r(reg1, reg2)
    global X86_XCHG_RM8_R8, X86_XCHG_EAX_R32, X86_NOP
    global X86_AL, X86_EAX, X86_RAX

    if this.isReg8(reg1) is true
      # xchg r8, r8
      this.emitCore_r_r(X86_XCHG_RM8_R8, reg2, reg1)

    elif (reg1 is X86_EAX) and (reg2 is X86_EAX)
      # Avoid emitting optimized one byte version for
      # xchg eax, eax
      # to distinguish from explicit nop opcode.
      this.emitWord(0xc087)

#    elif (reg1 is X86_RAX) and (reg2 is X86_RAX)
      # xchg rax, rax
      # Emit one byte nop without rex.w prefix.
#      this.emitByte(X86_NOP)

    else
      regMask1 = bitand(reg1, 0x7)
      regMask2 = bitand(reg2, 0x7)

      if regMask1 is X86_AL
        # Use optimized one-byte version if first operand is rax.
        # xchg ax/eax/rax, r
        this.emitSizePrefixIfNeeded(reg1)
        this.emitByte(X86_XCHG_EAX_R32 + regMask2)

      elif regMask2 is X86_AL
        # xchg r, ax/eax/rax
        # Swap arguments and use optimized rax version.
        this.emitSizePrefixIfNeeded(reg1)
        this.emitByte(X86_XCHG_EAX_R32 + regMask1)

      else
        # General case: xchg r, r
        this.emitCore_r_r(X86_XCHG_RM8_R8, reg2, reg1)
      endif
    endif
  endmethod

