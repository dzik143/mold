  #
  # Bit test: test
  #

  method test_r_r(reg1, reg2)
    global X86_TEST_RM8_R8
    this.emitCore_r_r(X86_TEST_RM8_R8, reg1, reg2)
  endmethod

  method test_m_r(regBase, scale, regIndex, disp, reg2)
