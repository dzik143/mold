TEST "sqrt(2) by Newton method"
#
# Calculate sqrt(2) using iterative (Netwton) method.
#
#        x             2
# newX = - * (3 - S * x )
#        2
#

S     = 0.5
x     = 1.0
delta = 1000000.0
iter  = 0

function abs(x) -> rv
  if x < 0.0
    rv = -x
  else
    rv = x
  endif
endfunction

while delta > 0.00001
  newX  = x / 2.0 * (3.0 - S * x*x)
  delta = abs(x - newX)
  x     = newX
  iter  = iter + 1

  print 'iter', iter, ':', x, ', delta=', delta
endwhile

