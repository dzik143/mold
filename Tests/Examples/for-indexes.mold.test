TEST "for indexes in: sum array indexes one-by-one"

x = [3,4,5]

acc = 0
for indexes idx in x
  acc = acc + idx
endfor
print acc

EXPECTED_OUTPUT:
3
-------------------------------------------------------------------------------

TEST "for indexes in: nested array"

A = [[0, 1, 2],
     [3, 4, 5],
     [6, 7, 8]]

acc = 0
for indexes rowIdx in A
  for indexes colIdx in A[rowIdx]
    print 'Add', rowIdx, colIdx
    acc = acc + rowIdx + colIdx
  endfor
endfor

print acc

EXPECTED_OUTPUT:
Add 0 0
Add 0 1
Add 0 2
Add 1 0
Add 1 1
Add 1 2
Add 2 0
Add 2 1
Add 2 2
18
